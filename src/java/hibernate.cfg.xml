<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/test?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">jugal</property>
        <mapping resource="com/foodadviser/model/Comment.hbm.xml"/>
    <mapping resource="com/foodadviser/model/Restaurantdetail.hbm.xml"/>
    <mapping resource="com/foodadviser/model/Review.hbm.xml"/>
    <mapping resource="com/foodadviser/model/Customer.hbm.xml"/>
    <mapping resource="com/foodadviser/model/Event.hbm.xml"/>
    
  </session-factory>
</hibernate-configuration>
